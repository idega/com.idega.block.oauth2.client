<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee" 
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">

	<servlet>
		<display-name>OAuth Callback Servlet</display-name>
        <servlet-name>OAuth Callback Servlet</servlet-name>
        <servlet-class>com.idega.block.oauth2.client.servlet.OAuth2CallbackServlet</servlet-class>
        <load-on-startup>210</load-on-startup>
    </servlet>

	<servlet>
		<display-name>GoogleDriveDownloader</display-name>
		<servlet-name>GoogleDriveDownloader</servlet-name>
		<servlet-class>com.idega.block.oauth2.client.servlet.GoogleDriveDownloader</servlet-class>
	</servlet>

	<servlet-mapping>
	    <servlet-name>GoogleDriveDownloader</servlet-name>
	    <url-pattern>/google-drive/</url-pattern>
	</servlet-mapping>

    <servlet-mapping>
        <servlet-name>OAuth Callback Servlet</servlet-name>
        <url-pattern>/oauth2callback</url-pattern>
    </servlet-mapping>
</web-app>